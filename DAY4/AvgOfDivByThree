class Solution(object):
    def averageValue(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        avg=0
        sum=0
        count=0
        for i in nums:
            if i%2==0:
                if i%3==0:
                    sum+=i
                    count+=1
        if count==0:
             return 0
        else:
             avg=sum/count
             return avg
